generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(90)
  username  String   @unique @db.VarChar(45)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  password  String   @unique
}

model user {
  id             Int       @id @default(autoincrement())
  email          String    @unique @db.VarChar(110)
  username       String    @unique @db.VarChar(88)
  introduction   String    @default("") @db.VarChar(230)
  password       String    @db.VarChar(99)
  ideas          content[]
  stories        story[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  totpSecret     String?   @db.TinyText
  totpEnabled    Boolean   @default(false)
  subscriptionId Int?
  reports        report[]
}

model purchase {
  id          Int      @id @default(autoincrement())
  contact     String   @db.VarChar(130)
  paidAmount  Float
  name        String   @db.VarChar(130)
  purchasedAt DateTime @default(now())
  content     content  @relation(fields: [contentId], references: [id])
  contentId   Int      @unique
}

model subscription {
  id                 Int                 @id @default(autoincrement())
  status             subscription_status
  startDateThisRound DateTime
  endDateThisRound   DateTime
  paymentMethod      payment_method
  updatedAt          DateTime            @updatedAt
  initAt             DateTime            @default(now())
  planChosen         plan                @relation(fields: [planId], references: [id])
  planId             Int
  userId             Int
}

model plan {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar(120)
  price        Float
  description  term[]
  subscription subscription[]
}

model term {
  rule   String
  id     Int    @id @default(autoincrement())
  plan   plan?  @relation(fields: [planId], references: [id])
  planId Int?
}

model content {
  id        Int       @id @default(autoincrement())
  title     String    @db.VarChar(150)
  sold      Boolean   @default(false)
  author    user      @relation(fields: [authorId], references: [id])
  authorId  Int
  content   String    @unique
  medias    media[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  tags      label[]
  price     Float?
  purchase  purchase?
}

model writing {
  id        Int      @id @default(autoincrement())
  title     String   @unique @db.VarChar(50)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  text      String   @db.MediumText
  story     story    @relation(fields: [storyId], references: [id])
  storyId   Int
}

model story {
  id          Int       @id @default(autoincrement())
  title       String    @unique @db.VarChar(105)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  description String    @unique @db.VarChar(220)
  chapters    writing[]
  author      user      @relation(fields: [userId], references: [id])
  userId      Int
}

model forum {
  id        Int        @id @default(autoincrement())
  subforums subforum[] // Each forum has multiple subforums
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model subforum {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(130) // Restricted to 260 characters
  description String   @db.VarChar(200)
  forum       forum    @relation(fields: [forumId], references: [id])
  forumId     Int
  topics      topic[] // Each subforum has multiple topics
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model topic {
  id          Int       @id @default(autoincrement())
  title       String    @unique @db.VarChar(177) // Restricted to 350 characters
  description String    @db.VarChar(200)
  subforum    subforum  @relation(fields: [subforumId], references: [id])
  subforumId  Int
  comments    comment[] // Each topic can have multiple comments
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  labels      label[]
}

model comment {
  id        Int      @id @default(autoincrement())
  text      String?  @db.Text
  media     media[] // Optional media content for comment
  topic     topic    @relation(fields: [topicId], references: [id])
  topicId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  labels    label[]
}

model label {
  id        Int      @id @default(autoincrement())
  name      String   @unique @db.VarChar(105)
  topic     topic?   @relation(fields: [topicId], references: [id])
  topicId   Int?
  comment   comment? @relation(fields: [commentId], references: [id])
  commentId Int?
  content   content? @relation(fields: [contentId], references: [id])
  contentId Int?
}

model media {
  id        Int        @id @default(autoincrement())
  url       String // Path or URL of the image
  content   content?   @relation(fields: [contentId], references: [id])
  contentId Int?
  comment   comment?   @relation(fields: [commentId], references: [id])
  commentId Int?
  type      media_type
}

model report {
  id            Int      @id @default(autoincrement())
  header        String   @db.TinyText
  report        String   @db.Text
  reporter      user     @relation(fields: [userId], references: [id])
  solid         Boolean? @default(false)
  resultSummary String?  @default("")
  userId        Int
  ideaId        Int?
  storyId       Int?
}

model plagiarism {
  id            Int      @id @default(autoincrement())
  header        String   @db.TinyText
  report        String   @db.Text
  solid         Boolean? @default(false)
  resultSummary String?  @default("")
  topicId       Int?
  subforumId    Int?
  commentId     Int?
}

enum subscription_status {
  active
  expired
  cancelled
}

enum payment_method {
  paypal
  stripe
}

enum media_type {
  video
  image
}
